<%- headers = ['Student Name', 'Grade', 'Teacher', 'Sponsor Name', 'Sponsor Phone', 'Sponsor email', 'Pledge per lap', 'Maximum Pledge',
               'Fixed Pledge', 'Lap Count', 'Committed Amount ($)', 'Paid Amount ($)'] -%>
<%= CSV.generate_line headers, row_sep: ?\t, :quote_char => ?\ %>
<%- @walkathon_pledges.each do |pledge| -%>
    <%= CSV.generate_line([
                                  pledge.student.full_name,
                                  pledge.student.grade,
                                  pledge.student.teacher.full_name,
                                  pledge.sponsor_name,
                                  pledge.sponsor_phone,
                                  pledge.sponsor_email,
                                  pledge.pledge_per_lap,
                                  pledge.maximum_pledge,
                                  pledge.fixed_pledge,
                                  pledge.lap_count,
                                  pledge.committed_amount,
                                  pledge.paid_amount
                          ], row_sep: ?\t, :quote_char => ?\ ) %>
<%- end -%>



