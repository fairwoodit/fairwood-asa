<%= bootstrap_form_for(@activity, layout: :horizontal, label_col: 'col-sm-4', control_col: 'col-sm-6') do |f| %>
  <%= f.text_field :name %>
  <%= f.text_field :instructor %>
  <%= f.number_field :cost, min: 0, step: 0.01, prepend: "$", control_col: "col-sm-3" %>
  <%= f.form_group do %>
    <%= f.check_box :cash_only %>
  <% end %>
  <%= f.text_field :category %>
  <%= f.number_field :min_grade, min: 0, max: 5, step: 1 %>
  <%= f.number_field :max_grade, min: 0, max: 5, step: 1 %>
  <%= f.text_area :description, { rows: 8 } %>
  <%= f.date_select :start %>
  <%= f.date_select :end %>
  <%= f.text_field :times %>
  <%= f.number_field :min_seats, min: 1, step: 1 %>
  <%= f.number_field :max_seats, min: 1, step: 1 %>
  <%= f.form_group do %>
    <%= f.check_box :visible, label: 'This activity should be visible in the activity list.' %>
  <% end %>
  <%= f.submit nil, { class: "btn-primary col-sm-offset-5" } %>
<% end %>
