<!DOCTYPE html>
<html>
<head>
  <title>Fairwood Activities</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link rel="shortcut icon" href="/favicon3.ico" type="image/x-icon"/>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <%= link_to 'Fairwood Activities', root_path, class: 'navbar-brand' %>
    </div>
    <div>
      <ul class="nav navbar-nav">
        <li class="<%= active_class(root_path, activities_path) %>">
          <%= link_to 'Home', root_path %>
        </li>
        <li class="<%= active_class(enrollments_path) %>">
          <%= link_to 'My Enrollments', enrollments_path %>
        </li>
        <li class="<%= active_class(students_path) %>">
          <%= link_to 'My Students', students_path %>
        </li>
        <li class="<%= active_class('/ASA-Calendar-Fall2015.pdf') %>">
          <%= link_to 'Calendar', '/ASA-Calendar-Fall2015.pdf' %>
        </li>
        <li class="<%= active_class(welcome_path) %>">
          <%= link_to 'About', welcome_path %>
        </li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if parent_signed_in? %>
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#"><%= current_parent.email %>
              <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Edit profile", edit_parent_registration_path %></li>
              <li><%= link_to "Log out", destroy_parent_session_path, :method => :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Sign up", new_parent_registration_path %></li>
          <li><%= link_to "Log in", new_parent_session_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>

<!--
<p class="notice"><\%= notice %></p>
<p class="alert"><\%= alert %></p>
-->

<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, id: "flash_#{name}" %>
<% end %>

<%= content_for?(:content) ? yield(:content) : yield %>
</body>
</html>
