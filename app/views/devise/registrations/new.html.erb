<% provide(:panel_title, 'Sign up') %>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), layout: :horizontal, label_col: 'col-sm-4', control_col: 'col-sm-6') do |f| %>
  <%= f.email_field :email, autofocus: true %>
  <%= f.password_field :password, autocomplete: "off", help: "#{@minimum_password_length} characters minimum" %>
  <%= f.password_field :password_confirmation, autocomplete: "off" %>

  <%= render partial: 'form', locals: {f: f} %>

  <%= f.submit 'Sign up', { class: "btn-primary col-sm-offset-5" } %>
<% end %>

<%= render "devise/shared/links" %>
