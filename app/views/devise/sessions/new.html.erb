<% provide(:panel_title, 'Log in') %>

<%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name), layout: :horizontal, label_col: 'col-sm-4', control_col: 'col-sm-6') do |f| %>
  <%= f.email_field :email, autofocus: true %>
  <%= f.password_field :password, autocomplete: "off" %>


  <% if devise_mapping.rememberable? -%>
    <%= f.form_group :remember_me do %>
      <%= f.check_box :remember_me %>
    <% end %>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", { class: "btn-primary col-sm-offset-5" } %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
