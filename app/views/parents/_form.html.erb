<%= bootstrap_form_for(@parent, layout: :horizontal, label_col: 'col-sm-4', control_col: 'col-sm-6') do |f| %>
  <%= f.text_field :email %>
  <%= f.password_field :password, placeholder: "Leave blank if unchanged" %>
  <%= f.text_field :first_name %>
  <%= f.text_field :last_name %>
  <%= f.text_field :phone_number %>
  <%= f.text_field :school %>
  <%= f.form_group :role do %>
    <%= f.radio_button :role, 'normal', label: 'Normal', checked: true, inline: true %>
    <%= f.radio_button :role, 'admin', label: 'Admin', inline: true %>
  <% end %>
  <%= f.submit nil, { class: "btn-primary col-sm-offset-5" } %>
<% end %>
